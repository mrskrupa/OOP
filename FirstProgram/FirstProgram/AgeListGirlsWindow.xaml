                </Grid>
                <Grid Margin="0 5 0 5">
                    <Button HorizontalAlignment="Right" Content="7 років" Width="230"/>
                    <Button HorizontalAlignment="Left" Content="6.5 років" Width="230"/>
                </Grid>
                <Grid Margin="0 5 0 5">
                    <Button HorizontalAlignment="Right" Content="9 років" Width="230"/>
                    <Button HorizontalAlignment="Left" Content="8 років" Width="230"/>
                </Grid>
                <Grid Margin="0 5 0 5">
                    <Button HorizontalAlignment="Left" Content="10 років" Width="230"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
