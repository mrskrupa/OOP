                <Grid Margin="0 0 0 5">
                    <Button HorizontalAlignment="Right" Content="21 місяць" Width="230"/>
                    <Button HorizontalAlignment="Left" Content="15 місяців" Width="230"/>
                </Grid>
                <Grid Margin="0 5 0 5">
                    <Button HorizontalAlignment="Right" Content="27 місяців" Width="230"/>
                    <Button HorizontalAlignment="Left" Content="2 роки" Width="230"/>
                </Grid>
                <Grid Margin="0 5 0 5">
                    <Button HorizontalAlignment="Right" Content="3 роки" Width="230"/>
                    <Button HorizontalAlignment="Left" Content="33 місяця" Width="230"/>
                </Grid>
                <Grid Margin="0 5 0 5">
                    <Button HorizontalAlignment="Right" Content="4 роки" Width="230"/>
                    <Button HorizontalAlignment="Left" Content="3.5 років" Width="230"/>
                </Grid>
                <Grid Margin="0 5 0 5">
                    <Button HorizontalAlignment="Right" Content="5 років" Width="230"/>
